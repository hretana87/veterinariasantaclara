<section class="portfolio" id="portfolio">
  <div class="container">
    <h2 class="text-center text-uppercase text-secondary mb-0">Servicios</h2>
    <hr class="star-dark mb-5">
    <div class="row">
      <% @colaboradores.each_with_index do |colaborador, index| %>
        <div class="col-md-8 col-lg-4">
        <a class="portfolio-item d-block mx-auto" data-toggle="modal" data-target="#modal-<%= index %>">
            <div class="portfolio-item-caption d-flex position-absolute h-100 w-100">
              <div class="portfolio-item-caption-content my-auto w-100 text-center text-white">
                <i class="fa fa-search-plus fa-2x"><h3><%= colaborador.name%></h3></i>
              </div>
            </div>
            <img class="d-block w-100" src="<%= colaborador.image.url(:medium) %>">                   
          </a>
      </div>
      <% end %>      
    </div>
  </div>
</section>

<% @colaboradores.each_with_index do |colaborador, index| %>
<!-- Modal -->
  <div class="modal fade" id="modal-<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
        <div class="container img-service">
          <div class="row">
            <div class="col-lg-12 mx-auto">
              <h2 class="text-secondary text-uppercase mb-0"><%= colaborador.name%></h2>
              <hr class="star-dark mb-5">
              <img class="img-service" src="<%= colaborador.image.url(:medium) %>">
              <p class="mb-5"><%= colaborador.description %></p>
              <a class="btn btn-primary btn-lg rounded-pill portfolio-modal-dismiss" href="">
                <i class="fa fa-close"></i>
                Close</a>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 