<div class="container container-section">
  <div class="col-lg-12 text-center">
    <p id="notice"><%= notice %></p>

    <h1>Colaboradores</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>

      <tbody>
        <% @colaboradores.each do |colaborador| %>
          <tr>
            <td><%= colaborador.name %></td>
            <td><%= colaborador.description %></td>
            <td><%= link_to 'Mostrar', colaborador %></td>
            <td><%= link_to 'Editar', edit_colaborador_path(colaborador) %></td>
            <td><%= link_to 'Eliminar', colaborador, method: :delete, data: { confirm: "¿Desea eliminar el colaborador #{colaborador.name}?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Colaborador', new_colaborador_url,class: "btn btn-primary" %>
 </div>
</div>