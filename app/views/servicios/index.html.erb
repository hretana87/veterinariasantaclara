<div class="container container-section">
  <div class="col-lg-12 text-center">
    <p id="notice"><%= notice %></p>

    <h1>Servicios</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Descripción</th>
          <th colspan="3">Acción</th>
        </tr>
      </thead>

      <tbody>
        <% @servicios.each do |servicio| %>
          <tr>
            <td><%= servicio.name %></td>
            <td><%= servicio.description %></td>
            <td><%= link_to 'Mostrar', servicio %></td>
            <td><%= link_to 'Editar', edit_servicio_path(servicio) %></td>
            <td><%= link_to 'Eliminar', servicio, method: :delete, data: { confirm: "¿Desea eliminar el servicio #{servicio.name}?" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nuevo Servicio', new_servicio_url,class: "btn btn-primary" %>
 </div>
</div>